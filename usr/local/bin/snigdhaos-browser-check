#!/bin/bash

echo
echo "Initiate..."
echo

package=snigdhaos-brave-config
if pacman -Qq $package > /dev/null ; then
  if pacman -Qq snigdhaos-gnome-config > /dev/null ; then
    sed -i 's/{\\\"name\\\":\\\"Firefox ESR\\\",\\\"icon\\\":\\\"\/usr\/share\/icons\/hicolor\/scalable\/apps\/firefox-logo.svg\\\",\\\"type\\\":\\\"Command\\\",\\\"data\\\":{\\\"command\\\":\\\"firefox-esr\\\"},\\\"angle\\\":-1}/{\\\"name\\\":\\\"Brave\\\",\\\"icon\\\":\\\"\/usr\/share\/icons\/hicolor\/scalable\/apps\/brave.svg\\\",\\\"type\\\":\\\"Command\\\",\\\"data\\\":{\\\"command\\\":\\\"brave\\\"},\\\"angle\\\":-1}/g' /usr/share/snigdhaos-gnome-config/dconf-shell.ini
  fi
fi

package=snigdhaos-firefox-config
if pacman -Qq $package > /dev/null ; then
  if pacman -Qq snigdhaos-gnome-config > /dev/null ; then
    sed -i 's/{\\\"name\\\":\\\"Brave\\\",\\\"icon\\\":\\\"\/usr\/share\/icons\/hicolor\/scalable\/apps\/brave.svg\\\",\\\"type\\\":\\\"Command\\\",\\\"data\\\":{\\\"command\\\":\\\"brave\\\"},\\\"angle\\\":-1}/{\\\"name\\\":\\\"Firefox ESR\\\",\\\"icon\\\":\\\"\/usr\/share\/icons\/hicolor\/scalable\/apps\/firefox-logo.svg\\\",\\\"type\\\":\\\"Command\\\",\\\"data\\\":{\\\"command\\\":\\\"firefox-esr\\\"},\\\"angle\\\":-1}/g' /usr/share/snigdhaos-gnome-config/dconf-shell.ini
  fi
fi

echo
echo "Done..."
echo
